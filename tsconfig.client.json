{
  "extends": "./tsconfig.test.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./assets/*"],
      "@lib/*": ["./client/src/lib/*"],
      "@components/*": ["./client/src/components/*"],
      "@pages/*": ["./client/src/pages/*"],
      "@hooks/*": ["./client/src/hooks/*"]
    }
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "shared/**/*.ts"
  ]
}